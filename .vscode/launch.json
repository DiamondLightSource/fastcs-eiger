{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Eiger IOC",
            "type": "debugpy",
            "request": "launch",
            "module": "fastcs_eiger",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "ioc",
                "EIGER",
            ]
        },
        {
            "name": "Eiger Odin IOC",
            "type": "debugpy",
            "request": "launch",
            "module": "fastcs_eiger",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "ioc",
                "EIGER",
                "--ip",
                "i03-eiger01",
                "--port",
                "80",
                "--odin-ip",
                "127.0.0.1",
            ]
        },
        {
            "name": "Eiger Asyncio",
            "type": "debugpy",
            "request": "launch",
            "module": "fastcs_eiger",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "asyncio"
            ]
        },
        {
            "name": "Debug Unit Test",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                // Enable break on exception when debugging tests (see: tests/conftest.py)
                "PYTEST_RAISE": "1",
            },
        }
    ]
}
